@PACKET@=@packet@-@VERSION@.@SUFFIX@
@PACKET@_MIRROR=@URL@
@PACKET@_DIR=$BUILD_DIR/@packet@-@VERSION@
@PACKET@_ENV=

build_@packet@() {
    test -e "$STATE_DIR/@packet@-@VERSION@" && return
    banner "Build $@PACKET@"
    download $@PACKET@_MIRROR $@PACKET@
    extract $@PACKET@
    apply_patches $@PACKET@_DIR $@PACKET@
    pushd $TOP_DIR
    cd $@PACKET@_DIR
    (
    eval \
	$CROSS_CONF_ENV \
	$@PACKET@_ENV \
	./configure --host=$TARGET_ARCH \
	    --prefix=/usr \
	    --sysconfdir=/etc || error
    )
    make $MAKEARGS || error

    error "update install"

    popd
    touch "$STATE_DIR/@packet@-@VERSION@"
}

build_@packet@
