#!/bin/sh
#
# /etc/init.d/rcS
#

. /etc/init.d/functions

if [ -e /usr/bin/figlet ]; then
    figlet -t -c "pdaXrom-NG"
    figlet -t -c `uname -sm`
    echo -ne "\n\n"
fi

#[ -e /dev/console ] || mknod -m 0600 /dev/console c 5 1
#[ -e /dev/null    ] || mknod -m 0666 /dev/null c 1 3

log_begin_msg -n "Ðœounting filesystems..."
mount -a 2>/dev/null
log_end_msg $?

if mount | grep /dev/root | grep squashfs >/dev/null ; then
    for d in /etc /var /home /media ; do
	log_begin_msg -n "Moving $d to ram"
	tar c $d 2>/dev/null | tar x -C /tmp && mount -o bind /tmp$d $d
	log_end_msg $?
    done
else
    log_begin_msg -n "Remounting rootfs for read/write"
    mount -o remount,rw /
    log_end_msg $?
fi

# Disable kernel log to console
echo "0 0 0 0" >/proc/sys/kernel/printk

# modprobe ppp_async
# loadkmap < /etc/boottime.kmap

# set hostname
test -e /etc/hostname && hostname -F /etc/hostname

run-parts -a start /etc/rc.d
