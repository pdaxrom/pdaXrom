#! /bin/bash
#
# cardctl          Eject cards before a suspend and reinsert after resume
#
# description: 
#



# See how we were called.
  
suspend() {
  cardctl eject 0 2>/dev/null

  return 0
}

resume() {
  cardctl insert 0 2>/dev/null
  
  return 0
}	


case "$1" in
  suspend)
  	suspend
	;;
  resume)
  	resume
	;;
  *)
	echo "Usage: $0 {suspend|resume}"
	exit 1
esac

exit $?
