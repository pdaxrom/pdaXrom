		bool
		prompt "2.3.3"
		depends on GLIBC

	config GLIBC_2_3_2
		bool
		prompt "2.3.2"
		depends on GLIBC

	config GLIBC_2_2_5
		bool
		prompt "2.2.5"
		depends on GLIBC

	config GLIBC_2_2_2
		bool
		prompt "2.2.2"
