menu	"C Library           "

choice
        prompt "Which C library do you want to use?"
        default GLIBC
	
	config GLIBC
		bool
 		prompt "GLIBC"
 		depends on !ARCH_NOMMU

	config NEWLIB
		bool
		prompt "Newlib"
    
