		bool
		prompt "2.9"
		depends on ARCH_MIPS

	config BINUTILS_2_11
		bool
		prompt "2.11"
		depends on ARCH_ARM || ARCH_X86 || ARCH_SH || ARCH_PPC || ARCH_MIPS

	config BINUTILS_2_13_2_1
		bool
		prompt "2.13.2.1"
		depends on ARCH_MIPS

	config BINUTILS_2_14
		bool
		prompt "2.14"
		depends on ARCH_ARM || ARCH_X86 || ARCH_SH || ARCH_PPC || ARCH_MIPS

	config BINUTILS_2_15
		bool
		prompt "2.15"
