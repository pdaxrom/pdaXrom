config BINUTILS_SNAPSHOT
	bool
	default y if BINUTILS_2_15_94_0_2
	
config BINUTILS_SNAPSHOT_NAME
	string
	default "2.15.94.0.2" if BINUTILS_SNAPSHOT && BINUTILS_2_15_94_0_2

choice
	prompt "GCC (GNU Compiler Collection) Version"
		default GCC_3_3_2
		depends on BUILD_CROSSCHAIN || NATIVE_GCC

	config GCC_2_95_2
		bool
		prompt "2.95.2"
		depends on ARCH_MIPS

	config GCC_2_95_3
		bool
		prompt "2.95.3"
		depends on ARCH_X86 || ARCH_ARM || ARCH_ARM_NOMMU || ARCH_SPARC || ARCH_PPC || ARCH_MIPS

	config GCC_3_0_3
		bool
		prompt "3.0.3"
		depends on ARCH_MIPS

	config GCC_3_2_2
		bool
		prompt "3.2.2"
		depends on ARCH_MIPS

	config GCC_3_3_2
		bool
		prompt "3.3.2"
		depends on ARCH_ARM || ARCH_X86 || ARCH_SH || ARCH_H8300 || ARCH_PPC || ARCH_MIPS

	config GCC_3_3_6
		bool
		prompt "3.3.6"
		depends on ARCH_ARM || ARCH_X86 || ARCH_SH || ARCH_H8300 || ARCH_PPC || ARCH_MIPS

