#
# /etc/profile
#

export PATH="$PATH:/usr/bin:/bin:/sbin"
export TSLIB_TSDEVICE=/dev/event0

# This fixes the backspace when telnetting in.
if [ "$TERM" != "linux" ]; then
        stty erase ^H
fi

PS1="\\u@\\h:\\w "
PS2=" >"
PS4="+ "

alias vim='vi'
alias l='ls -l'
alias ll='ls -al'
alias ..='cd ..'
alias ...='cd ../..'
alias md='mkdir'
alias rd='rmdir'

# source this file for subsequent shells too
export ENV=/etc/profile

# Exec local profile

if [ -e "/etc/profile.local" ]; then
	echo "running /etc/profile.local"
	. /etc/profile.local
fi
