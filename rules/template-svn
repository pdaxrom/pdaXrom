@PACKET@_VERSION=@VERSION@
@PACKET@=@name@-${@PACKET@_VERSION}
@PACKET@_SVN=@URL@
@PACKET@_DIR=$BUILD_DIR/@name@-${@PACKET@_VERSION}
@PACKET@_ENV="$CROSS_ENV_AC"

build_@packet@() {
    test -e "$STATE_DIR/@packet@.installed" && return
    banner "Build @name@"
    download_svn $@PACKET@_SVN $@PACKET@
    cp -R $SRC_DIR/$@PACKET@ $@PACKET@_DIR
    apply_patches $@PACKET@_DIR $@PACKET@
    pushd $TOP_DIR
    cd $@PACKET@_DIR
    (
    eval \
	$CROSS_CONF_ENV \
	$@PACKET@_ENV \
	./configure --build=$BUILD_ARCH --host=$TARGET_ARCH \
	    --prefix=/usr \
	    --sysconfdir=/etc \
	    || error
    ) || error "configure"

    make $MAKEARGS || error

    #install_sysroot_files || error

    install_fakeroot_init

    error "update install"

    install_fakeroot_finish || error

    popd
    touch "$STATE_DIR/@packet@.installed"
}

build_@packet@
