# fbpanel <profile> config file
# see http://fbpanel.sf.net/docs.html for complete configuration guide


Global {
    edge = bottom
    allign = center
    margin = 0
    widthtype = percent
    width = 100
    height = 32
    transparent = false
    tintcolor = #000000
    alpha = 0
    setdocktype = true
    setpartialstrut = true
}

