+static inline int
+cache_distance(struct rq *task_rq, struct rq *rq, struct task_struct *p)
+{
+	/* Check rq->last_task hasn't been dereferenced */
+	if (likely(rq->last_task)) {
+		if (rq->last_task == p)
+			return 0;
+	}
+	return rq->cpu_locality[cpu_of(task_rq)] * task_timeslice(p);
