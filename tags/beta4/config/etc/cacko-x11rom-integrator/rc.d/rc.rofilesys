#!/bin/bash

#export PATH=$PATH:/usr/sbin.rom:/usr/bin.rom

#mkdir /dev/shm

cp -a /etc /dev/shm/
cp -a /var /dev/shm/

mount -o bind /dev/shm/etc /etc
mount -o bind /dev/shm/var /var

mkdir /dev/shm/tmp
mkdir /dev/shm/run
chmod 1777 /var/tmp
chmod 1777 /tmp
touch /var/run/utmp
touch /var/log/lastlog

cd /

mount -t ramfs none /home || mount -t tmpfs none /home

tar xf /root/.home_default.tar  2> /dev/null > /dev/null
